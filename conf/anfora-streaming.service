[Unit]
Description=__APP__ streaming
After=network.target

[Service]
Type=simple
User=__APP__
Group=__APP__
WorkingDirectory=__FINALPATH__/src
ExecStart=__NODEJS_PATH__/node __FINALPATH__/src/streaming/index.js
Restart=always
Environment=PATH=/usr/bin:/usr/local/bin:__NODEJS_PATH__
Environment=NODE_ENV=production

[Install]
WantedBy=multi-user.target
